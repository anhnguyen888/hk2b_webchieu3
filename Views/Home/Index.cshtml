@model MyWebApp.Models.HomeViewModel // Khai báo model cho View này

@{
    ViewData["Title"] = "Home Page";
}

<!-- Featured Products Section -->
<section class="mb-5">
    <h2 class="section-title">Featured Products</h2>
    @if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
    {
        <div class="row">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="product-card">
                        <div class="product-img">
                            <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" class="img-fluid" />
                        </div>
                        <div class="p-3">
                            <h5 class="product-title">@product.Name</h5>
                            <p class="product-price">$@product.Price.ToString("0.00")</p>
                            <p class="product-description">@product.Description</p>
                            <button class="btn btn-add-cart" data-product-id="@product.Id">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No featured products available at the moment.</p>
    }
</section>

<!-- New Products Section -->
<section>
    <h2 class="section-title">New Products</h2>
    @if (Model.NewProducts != null && Model.NewProducts.Any())
    {
        <div class="row">
            @foreach (var product in Model.NewProducts)
            {
                <div class="col-md-4 mb-4"> 
                    <div class="product-card">
                        <div class="product-img">
                            <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" class="img-fluid" />
                        </div>
                        <div class="p-3">
                            <h5 class="product-title">@product.Name</h5>
                            <p class="product-price">$@product.Price.ToString("0.00")</p>
                            <p class="product-description">@product.Description</p>
                            <button class="btn btn-add-cart" data-product-id="@product.Id">Add to Cart</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No new products available at the moment.</p>
    }
</section>
